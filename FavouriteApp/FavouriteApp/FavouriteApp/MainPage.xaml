<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FavouriteApp.MainPage"
            xmlns:local="clr-namespace:FavouriteApp"
             Title="Menu">
 <!-- displays the basic information for all the pages you navigate -->
    <FlyoutPage.Flyout>
        <local:MenuPage x:Name="mainmenu"/>
    </FlyoutPage.Flyout>

    <!-- displays the corresponce to the item selected on the flyout page,
    you can add a content page here and you can referance a seperate page-->
    
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:Home/>
            </x:Arguments>
        </NavigationPage> 
    </FlyoutPage.Detail>


</FlyoutPage>
